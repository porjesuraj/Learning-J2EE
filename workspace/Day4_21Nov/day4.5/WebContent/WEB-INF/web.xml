<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>day4.1</display-name>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	<!-- servlet deployment tags -->
	<servlet>
		<servlet-name>abc</servlet-name>
		<servlet-class>pages.LoginServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/validate</url-pattern>
	</servlet-mapping>
	
	<!-- DB config details via context params -->
		<context-param>
			<param-name>drvr_cls</param-name>
			<param-value>com.mysql.cj.jdbc.Driver</param-value>
		</context-param>
		<context-param>
			<param-name>db_url</param-name>
			<param-value>jdbc:mysql://localhost:3306/day2?useSSL=false</param-value>
		</context-param>
		<context-param>
			<param-name>user_nm</param-name>
			<param-value>dac</param-value>
		</context-param>
		<context-param>
			<param-name>password</param-name>
			<param-value>password</param-value>
		</context-param>
</web-app>